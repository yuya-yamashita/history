<div class="diary-index-wrapper" >
	<% if @comment.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @comment.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center text-white">Add Comment</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :comment_body, class: 'text-white'%>
            <%= f.text_area :comment_body, class: 'form-control' %>
            <%= f.hidden_field :diary_id, :value => params[:diary_id] %>
          </div>
          <%= f.submit 'コメントする！', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
