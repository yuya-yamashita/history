<div class="users-new-wrapper" >
	<% if @diary.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @diary.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
	<div class="height-space">
	</div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center text-white">Add Diary</h1>
        <%= form_for @diary do |f| %>
          <div class="form-group">
            <%= f.label :title, class: 'text-white'%>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

					<div class="form-group">
						<%= f.label :label_list, "タグ（カンマ区切り）", class: 'text-white' %>
						<%= f.text_field :label_list, value: @diary.label_list.join(','), class: 'form-control' %>
					</div>

          <div class="form-group">
            <%= f.label :body, class: 'text-white'%>
            <%= f.text_area :body, class: 'form-control' %>
						<%= f.hidden_field :diary_id, :value => params[:diary_id] %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
